{
  "video_path": "precompute/video/seg12_cut.mp4",
  "frames_dir": "precompute/frames/010",

  "ball": {
    "module": "precompute.ball.inference",
    "output_folder": "output/precompute/ball",
    "out_jsonl": "output/precompute/ball.jsonl",

    "hrnet_config": "precompute/ball/config_hrnet.yaml",
    "weights_path": "precompute/models/ball.pth.tar",

    "n_frames": 3,
    "heatmap_threshold": 0.2,
    "distance_threshold": 5,
    "history_size": 3
  },

  "hoop": {
    "module": "precompute.hoop.inference",
    "model": "precompute/models/hoop.pt",
    "out_jsonl": "output/precompute/hoop.jsonl",
    "batch_size": 16
  },

  "court": {
    "module": "precompute.court.keypoints",
    "model": "precompute/models/court.pt",
    "out_jsonl": "output/precompute/court.jsonl",
    "batch_size": 20
  },

  "scoring": {
    "module": "precompute.scoring.detect",
    "out_jsonl": "precompute/output/scoring.jsonl",
    "visualize": false,
    "viz_dir": "output/scoring_viz"
  },

  "pose": {
    "module": "precompute.pose.detect",
    "openpose_root": "precompute/pose/openpose",
    "model_folder": "precompute/models/pose_models",
    "out_jsonl": "output/precompute/pose.jsonl",
    "window_len": 90,
    "net_resolution": "-1x368",
    "visualize": false,
    "viz_dir": "precompute/output/pose_viz"
  },

  "teams": {
    "team_1": "China",
    "team_2": "Indonesia"
  },

  "team_sides": {
    "left_side": "China",
    "right_side": "Indonesia",
    "switch_sides": true,
    "halftime": "00:26:14"
  },

  "hoop_shadow": {
    "out_jsonl": "output/game_logic/hoop_shadow.jsonl"
  },
  "game_logic": {
    "summary_out_jsonl": "output/game_logic/summary.jsonl",
    "score_input_json": "output/game_logic/score_input.json",
    "fair_score": "output/fair_score.txt",
    "viz_dir": "output/game_logic/hoop_shadow_viz"
  }
}

